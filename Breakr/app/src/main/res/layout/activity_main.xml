<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/calm0">

    <TextView
        android:id="@+id/introText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/intro_string"
        android:textColor="@color/darkText"
        android:textSize="30sp"
        android:typeface="normal"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/hourButton3"
        android:layout_width="264dp"
        android:layout_height="72dp"
        android:layout_marginBottom="140dp"
        android:text="@string/hours_string_3"
        app:backgroundTint="@color/calm3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/hourButton4"
        android:layout_width="264dp"
        android:layout_height="72dp"
        android:text="@string/hours_string_4"
        app:backgroundTint="@color/calm3"
        app:layout_constraintEnd_toEndOf="@+id/hourButton3"
        app:layout_constraintStart_toStartOf="@+id/hourButton3"
        app:layout_constraintTop_toBottomOf="@+id/hourButton3" />

    <Button
        android:id="@+id/hourButton2"
        android:layout_width="264dp"
        android:layout_height="72dp"
        android:text="@string/hours_string_2"
        app:backgroundTint="@color/calm3"
        app:layout_constraintBottom_toTopOf="@+id/hourButton3"
        app:layout_constraintEnd_toEndOf="@+id/hourButton3"
        app:layout_constraintStart_toStartOf="@+id/hourButton3" />

    <Button
        android:id="@+id/endButton"
        android:layout_width="264dp"
        android:layout_height="72dp"
        android:text="@string/hours_string_1"
        app:backgroundTint="@color/calm3"
        app:layout_constraintBottom_toTopOf="@+id/hourButton2"
        app:layout_constraintEnd_toEndOf="@+id/hourButton2"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="@+id/hourButton2" />

</androidx.constraintlayout.widget.ConstraintLayout>